# Proton Bridge IMAP over STARTTLS
IMAP_HOST=host.docker.internal
IMAP_PORT=1143
IMAP_USER=your_username
IMAP_PASS=your_password
IMAP_MAILBOX=INBOX
IMAP_USE_STARTTLS=true
# This needs to be true when using certificates
IMAP_TLS_VERIFY=false
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# SQLite state
DB_PATH=/data/inbox.sqlite3

# Polling behavior
POLL_INTERVAL_SECONDS=300
INITIAL_FETCH_LIMIT=50

# CORS (frontend dev origin)
CORS_ORIGINS=http://localhost:5173

# Ollama (reserved for later milestones)
OLLAMA_URL=http://127.0.0.1:11434

